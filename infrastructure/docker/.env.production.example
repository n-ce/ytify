# ============================================================================
# YTFY Production Environment Variables
# ============================================================================
# Copy this file to .env.production and fill in the values
# ============================================================================

# ==========================================================================
# Application Settings
# ==========================================================================

# Node environment
NODE_ENV=production

# Application port
PORT=3000

# Timezone
TIMEZONE=UTC

# ==========================================================================
# Server Settings
# ==========================================================================

# Server hostname(s)
SERVER_NAME=music.ml4-lab.com

# Backend URL
BACKEND_URL=http://backend:3000

# ==========================================================================
# SSL/TLS Settings
# ==========================================================================

# SSL certificate paths (inside container)
SSL_CERTIFICATE=/etc/letsencrypt/live/music.ml4-lab.com/fullchain.pem
SSL_CERTIFICATE_KEY=/etc/letsencrypt/live/music.ml4-lab.com/privkey.pem
SSL_TRUSTED_CERTIFICATE=/etc/letsencrypt/live/music.ml4-lab.com/chain.pem

# Domain for Let's Encrypt
LETSENCRYPT_EMAIL=admin@ml4-lab.com
LETSENCRYPT_DOMAIN=music.ml4-lab.com

# ==========================================================================
# Redis Settings
# ==========================================================================

# Redis connection URL
REDIS_URL=redis://redis:6379

# Redis password (if authentication is enabled)
# REDIS_PASSWORD=your-redis-password-here

# ==========================================================================
# Database Settings (if applicable)
# ==========================================================================

# Database URL
# DATABASE_URL=postgresql://user:password@host:5432/ytfy

# ==========================================================================
# External APIs
# ==========================================================================

# YouTube API Key (if needed)
# YOUTUBE_API_KEY=your-youtube-api-key

# Last.fm API Key (for music metadata)
# LASTFM_API_KEY=your-lastfm-api-key

# ==========================================================================
# Monitoring & Logging
# ==========================================================================

# Grafana admin password
GRAFANA_PASSWORD=change-this-password

# Grafana external URL
GRAFANA_ROOT_URL=https://music.ml4-lab.com/grafana

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ==========================================================================
# Analytics (Optional)
# ==========================================================================

# Analytics endpoint for Web Vitals
# ANALYTICS_ENDPOINT=https://analytics.example.com/collect

# Google Analytics ID
# GA_ID=G-XXXXXXXXXX

# ==========================================================================
# Feature Flags
# ==========================================================================

# Enable debug mode
DEBUG=false

# Enable performance monitoring
PERF_MONITORING=true

# Enable service worker
ENABLE_SW=true

# ==========================================================================
# Rate Limiting
# ==========================================================================

# General rate limit (requests per minute)
RATE_LIMIT_GENERAL=100

# API rate limit (requests per minute)
RATE_LIMIT_API=30

# ==========================================================================
# Cache Settings
# ==========================================================================

# Default cache TTL (seconds)
CACHE_TTL_DEFAULT=300

# API cache TTL (seconds)
CACHE_TTL_API=1800

# Static asset cache TTL (seconds)
CACHE_TTL_STATIC=604800

# ==========================================================================
# Security
# ==========================================================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://music.ml4-lab.com,https://ytify.nicesrv.de

# Secret key for signing (generate with: openssl rand -hex 32)
SECRET_KEY=change-this-to-a-random-32-byte-hex-string

# ==========================================================================
# Cloud Sync (if using custom backend)
# ==========================================================================

# Sync hash salt
# SYNC_HASH_SALT=your-random-salt-here

# Maximum library size (bytes)
MAX_LIBRARY_SIZE=10485760

# ==========================================================================
# Docker Settings
# ==========================================================================

# Compose project name
COMPOSE_PROJECT_NAME=ytfy

# Docker registry (for custom images)
# DOCKER_REGISTRY=registry.example.com
